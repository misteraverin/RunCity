<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_subject"
        android:text="Тема:"
        android:layout_alignBaseline="@+id/email_subject_text"
        android:layout_margin="5sp"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_subject_text"
        android:inputType="textEmailSubject"
        android:layout_toRightOf="@id/email_subject"
        android:layout_alignParentTop="true"
        android:layout_margin="5sp"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/email_message_text"
        android:layout_below="@id/email_subject"
        android:layout_above="@+id/email_sent"
        android:layout_margin="5sp"
        android:hint="Ваше сообщение"
        android:gravity="top"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_sent"
        android:text="Отправить"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5sp"/>

</RelativeLayout>